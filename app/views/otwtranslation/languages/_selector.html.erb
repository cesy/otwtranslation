<%= form_tag(otwtranslation_select_language_path, 
             :method => "get", :id => "otwtranslation_language_select") do %>
  <%= select_tag(:otwtranslation_language, 
        options_from_collection_for_select(
        Language.where(:translation_viewable => true), :short, :name, 
        session[:otwtranslation_language])) %>
  <%= submit_tag("Set language") %>
<% end %>
