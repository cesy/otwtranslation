<h1><%= ts("Phrases List") %></h1>

<table>
  <tr>
    <th><%= ts("Label") %></th>
    <th><%= ts("Description") %></th>
    <th><%= ts("Locale") %></th>
    <th><%= ts("Version") %></th>
  </tr>

<% @phrases.each do |phrase| %>
  <tr>
    <td><%= link_to phrase.label, otwtranslation_phrase_path(phrase) %></td>
    <td><%= phrase.description %></td>
    <td><%= phrase.locale %></td>
    <td><%= phrase.version %></td>
  </tr>
<% end %>
</table>

