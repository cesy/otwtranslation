if ( confirm("Are you sure you want disapprove this translation?") ) {
  $.ajax({url: '<%= otwtranslation_disapprove_translation_path(@translation_id) %>',
          type: 'post',
          dataType: 'script',
          async: 'false',
          data: { '_method': 'disapprove' },
	  success: function(html) {
	    $("li#translation<%= @translation_id %> div").replaceWith(html)
          }
        });
}


