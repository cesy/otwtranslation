if ( confirm("Are you sure you want delete this translation?") ) {
  $.ajax({url: '<%= otwtranslation_destroy_translation_path(@translation_id) %>',
          type: 'delete',
          dataType: 'script',
          async: 'false',
          data: { '_method': 'destroy' },
	  success: function(html) {
	    $("li#translation<%= @translation_id %> div").remove()
          }
        });
}


