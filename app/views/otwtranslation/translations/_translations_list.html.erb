<h3 class="landmark">Translations for this phrase</h3>

<h3>Translations for this phrase:</h3>

<% if translations.empty? %>
  <p id="otwtranslation_notranslations">
    <%= ts("There are no translations for the selected language.") %>
  </p>

<% elsif %>

  <ol id="otwtranslation_translations">
    <% translations.each.with_index do |translation, i| %>
      <li id="translation<%= translation.id %>" 
          class="<%= i%2 == 0 ? "even" : "odd" %>"> 

        <%= render :partial => "otwtranslation/translations/translation", 
                   :locals => { :translation => translation } %>

      </li>
    <% end %>
  </ol>

<% end %>
