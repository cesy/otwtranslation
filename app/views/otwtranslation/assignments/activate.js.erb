// Replace navigation bar in show
$(".assignments-show ul#assignment_navigation").replaceWith(
  "<%= escape_javascript(render :partial => "navigation", 
           :locals => { :assignment => @assignment, :on_show => true }) %>")

// Replace activated status in show
$("dl#otwtranslation_assignment dd.activated").html(
  "<%= @assignment.activated ? "yes" : "no" %>")

// Replace navigation bar in index
$("tr#otwtranslation_assignment_<%= @assignment.id %> ul#assignment_navigation").replaceWith(
  "<%= escape_javascript(render :partial => "navigation", 
           :locals => { :assignment => @assignment, :on_show => false }) %>")

// Replace activated status in index
$("tr#otwtranslation_assignment_<%= @assignment.id %> td.activated").html(
  "<%= @assignment.activated ? "&#x2713;".html_safe : "" %>")
