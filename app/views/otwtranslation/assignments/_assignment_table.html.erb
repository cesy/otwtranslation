<h3 class="landmark">Assignment Table</h3>
<table id="otwtranslation_assignments" summary="please summarise">
  <caption><!--please briefly label--></caption>
  <thead>
    <tr>
      <th><%= "Source" %></th>
      <th><%= "Description" %></th>
      <th><%= "Assigned to" %></th>
      <th><%= "Completed" %></th>
      <th><%= "Navigation" %></th>
    </tr>
  </thead>
  <tbody>
    <% assignments.each do |assignment| %>
      <tr class="assignment" id="otwtranslation_assignment_<%= assignment.id %>">
        <th class="source">
	  <% if assignment.source %>
            <%= link_to(assignment.source.controller_action, 
                        otwtranslation_source_path(assignment.source)) %>
	  <% end %>
        </th>
        <td class="description"><%= assignment.description %></td>
        <td class="assignees"><%= assignment.assignees_names %></td>
        <td class="completed"><%= assignment.completed? %></td>
        <td class="navigation">
	  <ul>
	    <li>
	      <%= form_for(assignment, 
                           :url => otwtranslation_assignment_path(assignment),
                           :html => {:method => :get}) do |f| %>
                <%= f.submit 'Show' %>
              <% end %>
	    </li>
	    <li>
	      <%= form_for(assignment, 
                           :url => otwtranslation_confirm_destroy_assignment_path(assignment),
                           :html => {:method => :get},
	                   :remote => true) do |f| %>
                <%= f.submit 'Delete' %>
              <% end %>
	    </li>
	  </ul>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>
