<% @user_session = UserSession.new unless @user_session %>
<%= form_for @user_session do |f| %>
  <p>
    <%= link_to_remote ts('Log in using OpenID'), 
           {:url => {:controller => :user_sessions, :action => 'openid'}},
           :href => login_path(:use_openid => true) %>
  </p>
  <p>
    <%= f.label :login, ts("User name:") %>
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password, ts("Password:")  %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, ts("Remember me")  %>
  </p>
  <p class="submit">
    <%= f.submit ts("Log in"), :class => 'submit' %>
  </p>
<% end %>
