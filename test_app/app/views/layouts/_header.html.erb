<!-- BEGIN header -->

<div id="header" role="banner">
  <div id="login-block">
  <% if logged_in? %>
    <%= render :partial => 'user_sessions/greeting' %>
  <% else %>
    <ul id="greeting" class="logged-out">
      <li>
        <%= render :partial => 'user_sessions/login' %>
        <span><a id='signin_closed' onclick='toggleLogin("signin")' style='display:none;'><%=h t('.layout.header.sign_in', :default => 'Log in') %></a>
        <a id='signin_open' onclick='toggleLogin("signin")'><%=h t('.links.cancel', :default => 'Cancel') %></a></span>
      </li>
    </ul>
  <% end %>
  <%= render :partial => 'layouts/works_search_box' %>
</div>

<h3 class="landmark">Site Navigation</h3>
  <ul class="navigation" role="navigation">
    <li><%= logged_in? ? span_if_current('my home', '/home') : span_if_current('home', root_path) %></li>
    <li><%= span_if_current('fandoms', "") %></li>
    <li><%= span_if_current('works', "") %></li>
    <li><%= span_if_current('people', "") %></li>
    <li><%= span_if_current('bookmarks', "") %></li>
    <li><%= span_if_current('tags', "") %></li>
    <li><%= span_if_current('collections', "") %></li>
  </ul>

  <%= otwtranslation_tool_header %>

  <div class="clear"></div>
</div>

<!-- END header -->

